<configs>
<!-- Crafting Info Panel for when crafting info is being displayed above backpack (craftingInfoPanel)-->
	<set xpath="/windows/window[@name='craftingInfoPanel']/@width">1005</set>

	<set xpath="/windows/window[@name='craftingInfoPanel']//rect[@name='requiredToolOverlay']/@pos">752,0</set>

	<set xpath="/windows/window[@name='craftingInfoPanel']//sprite[@name='backgroundMain'][@width='604']/@width">1006</set>

	<set xpath="/windows/window[@name='craftingInfoPanel']//rect[@name='searchControls']/@width">851</set>
	
	<set xpath="/windows/window[@name='craftingInfoPanel']//rect[@name='description']/@width">849</set>
	<set xpath="/windows/window[@name='craftingInfoPanel']//rect[@name='description']/sprite[@name='backgroundMain']/@width">855</set>
	<set xpath="/windows/window[@name='craftingInfoPanel']//rect[@name='description']//label[@name='descriptionText']/@width">842</set>

	<set xpath="/windows/window[@name='craftingInfoPanel']//rect[@name='ingredients']/@width">849</set>
	<set xpath="/windows/window[@name='craftingInfoPanel']//rect[@name='ingredients']/grid/@width">849</set>
	<set xpath="/windows/window[@name='craftingInfoPanel']//rect[@name='ingredients']/grid/@cell_width">849</set>

	<set xpath="/windows/window[@name='craftingInfoPanel']//rect[@name='unlockedBy']/@width">849</set>
	<set xpath="/windows/window[@name='craftingInfoPanel']//rect[@name='unlockedBy']/grid/@width">849</set>
	<set xpath="/windows/window[@name='craftingInfoPanel']//rect[@name='unlockedBy']/grid/@cell_width">849</set>


<!-- Empty Info Panel for when nothing is being displayed above backpack (emptyInfoPanel)-->
	<set xpath="/windows/window[@name='emptyInfoPanel']/@width">1005</set>

	<set xpath="/windows/window[@name='emptyInfoPanel']//sprite[@name='backgroundMain']/@width">1005</set>


<!-- Item Info Panel for when item details are being displayed above backpack (itemInfoPanel)-->
	<set xpath="/windows/window[@name='itemInfoPanel']/@width">1008</set>

	<set xpath="/windows/window[@name='itemInfoPanel']/panel[@name='header']/label[@pos='575,-8']/@pos">977,-8</set>
	<set xpath="/windows/window[@name='itemInfoPanel']/panel[@name='header']/sprite[@name='costIcon']/@pos">979,-8</set>

	<set xpath="/windows/window[@name='itemInfoPanel']//sprite[@name='backgroundMain'][@width='603']/@width">1005</set>

	<set xpath="/windows/window[@name='itemInfoPanel']//rect[@name='searchControls']/@width">850</set>
	<set xpath="/windows/window[@name='itemInfoPanel']//rect[@name='searchControls']/sprite/@width">851</set>

	<set xpath="/windows/window[@name='itemInfoPanel']//rect[@name='description']/@width">849</set>
	<set xpath="/windows/window[@name='itemInfoPanel']//rect[@name='description']/sprite[@name='backgroundMain']/@width">855</set>
	<set xpath="/windows/window[@name='itemInfoPanel']//rect[@name='description']/label[@name='descriptionText']/@width">842</set>
	<set xpath="/windows/window[@name='itemInfoPanel']//rect[@name='description']//label[@name='descriptionText']/@width">842</set>

	<set xpath="/windows/window[@name='itemInfoPanel']//rect[@name='description']/rect[@width='453']/@width">855</set>
	<set xpath="/windows/window[@name='itemInfoPanel']//rect[@name='description']//rect/label[@width='430']/@width">832</set>

	<set xpath="/windows/window[@name='itemInfoPanel']//rect[@width='450']/@width">852</set>

	<!-- dummy background to go on the end of the parts grid -->
 	<append xpath="/windows/window[@name='itemInfoPanel']/rect[@name='contentInfo']">
			<rect pos="603,-271" width="400" height="73" >
				<sprite name="background" depth="2" color="[mediumGrey]" type="sliced" globalopacity="true" />
				<sprite depth="3" name="innerBorder" sprite="menu_empty3px" color="[mediumGrey]" type="sliced" globalopacity="true" fillcenter="false"/>
			</rect>
	</append>


<!-- Buffs Info Panel for when on character menu and displaying buff details above backpack (buffInfoPanel)-->
	<set xpath="/windows/window[@name='buffInfoPanel']/@width">1005</set>

	<set xpath="/windows/window[@name='buffInfoPanel']/rect//sprite[@name='backgroundMain'][@width='603']/@width">1005</set>
	
	<set xpath="/windows/window[@name='buffInfoPanel']/rect//rect[@name='description']/@width">850</set>
	<set xpath="/windows/window[@name='buffInfoPanel']/rect//rect[@name='description']/sprite[@name='backgroundMain']/@width">855</set>
	<set xpath="/windows/window[@name='buffInfoPanel']/rect//rect[@name='description']//label[@name='descriptionText']/@width">842</set>


<!-- Rental vending machine Info Panel (serviceInfoPanel)-->
	<set xpath="/windows/window[@name='serviceInfoPanel']/@width">1005</set>

	<set xpath="/windows/window[@name='serviceInfoPanel']/panel[@name='header']/label[@pos='350,-8']/@pos">751,-8</set>
	<set xpath="/windows/window[@name='serviceInfoPanel']/panel[@name='header']/sprite[@name='costIcon']/@pos">979,-8</set>

	<set xpath="/windows/window[@name='serviceInfoPanel']//sprite[@name='backgroundMain'][@width='603']/@width">1005</set>
	
	<set xpath="/windows/window[@name='serviceInfoPanel']//rect[@name='description']/@width">849</set>
	<set xpath="/windows/window[@name='serviceInfoPanel']//rect[@name='description']/sprite[@name='backgroundMain']/@width">855</set>
	<set xpath="/windows/window[@name='serviceInfoPanel']//rect[@name='description']/label[@name='statText']/@width">656</set>
	<set xpath="/windows/window[@name='serviceInfoPanel']//rect[@name='description']/label[@name='descriptionText']/@width">842</set>
</configs>
