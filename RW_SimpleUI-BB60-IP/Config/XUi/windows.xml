<configs>
<!-- Crafting Info Panel for when crafting info is being displayed above backpack (craftingInfoPanel)-->
	<set xpath="/windows/window[@name='craftingInfoPanel']/@width">670</set>

	<set xpath="/windows/window[@name='craftingInfoPanel']//rect[@name='requiredToolOverlay']/@pos">417,0</set>

	<set xpath="/windows/window[@name='craftingInfoPanel']//sprite[@name='backgroundMain'][@width='604']/@width">671</set>

	<set xpath="/windows/window[@name='craftingInfoPanel']//rect[@name='searchControls']/@width">516</set>
	
	<set xpath="/windows/window[@name='craftingInfoPanel']//rect[@name='description']/@width">514</set>
	<set xpath="/windows/window[@name='craftingInfoPanel']//rect[@name='description']/sprite[@name='backgroundMain']/@width">520</set>
	<set xpath="/windows/window[@name='craftingInfoPanel']//rect[@name='description']//label[@name='descriptionText']/@width">507</set>

	<set xpath="/windows/window[@name='craftingInfoPanel']//rect[@name='ingredients']/@width">514</set>
	<set xpath="/windows/window[@name='craftingInfoPanel']//rect[@name='ingredients']/grid/@width">514</set>
	<set xpath="/windows/window[@name='craftingInfoPanel']//rect[@name='ingredients']/grid/@cell_width">514</set>

	<set xpath="/windows/window[@name='craftingInfoPanel']//rect[@name='unlockedBy']/@width">514</set>
	<set xpath="/windows/window[@name='craftingInfoPanel']//rect[@name='unlockedBy']/grid/@width">514</set>
	<set xpath="/windows/window[@name='craftingInfoPanel']//rect[@name='unlockedBy']/grid/@cell_width">514</set>


<!-- Empty Info Panel for when nothing is being displayed above backpack (emptyInfoPanel)-->
	<set xpath="/windows/window[@name='emptyInfoPanel']/@width">670</set>

	<set xpath="/windows/window[@name='emptyInfoPanel']//sprite[@name='backgroundMain']/@width">670</set>


<!-- Item Info Panel for when item details are being displayed above backpack (itemInfoPanel)-->
	<set xpath="/windows/window[@name='itemInfoPanel']/@width">673</set>

	<set xpath="/windows/window[@name='itemInfoPanel']/panel[@name='header']/label[@pos='575,-8']/@pos">642,-8</set>
	<set xpath="/windows/window[@name='itemInfoPanel']/panel[@name='header']/sprite[@name='costIcon']/@pos">644,-8</set>

	<set xpath="/windows/window[@name='itemInfoPanel']//sprite[@name='backgroundMain'][@width='603']/@width">670</set>

	<set xpath="/windows/window[@name='itemInfoPanel']//rect[@name='searchControls']/@width">515</set>
	<set xpath="/windows/window[@name='itemInfoPanel']//rect[@name='searchControls']/sprite/@width">516</set>

	<set xpath="/windows/window[@name='itemInfoPanel']//rect[@name='description']/@width">514</set>
	<set xpath="/windows/window[@name='itemInfoPanel']//rect[@name='description']/sprite[@name='backgroundMain']/@width">520</set>
	<set xpath="/windows/window[@name='itemInfoPanel']//rect[@name='description']/label[@name='descriptionText']/@width">507</set>
	<set xpath="/windows/window[@name='itemInfoPanel']//rect[@name='description']//label[@name='descriptionText']/@width">507</set>

	<set xpath="/windows/window[@name='itemInfoPanel']//rect[@name='description']/rect[@width='453']/@width">520</set>
	<set xpath="/windows/window[@name='itemInfoPanel']//rect[@name='description']//rect/label[@width='430']/@width">497</set>

	<set xpath="/windows/window[@name='itemInfoPanel']//rect[@width='450']/@width">517</set>

	<!-- dummy background to go on the end of the parts grid -->
 	<append xpath="/windows/window[@name='itemInfoPanel']/rect[@name='contentInfo']">
			<rect pos="603,-271" width="65" height="73" >
				<sprite name="background" depth="2" color="[mediumGrey]" type="sliced" globalopacity="true" />
				<sprite depth="3" name="innerBorder" sprite="menu_empty3px" color="[mediumGrey]" type="sliced" globalopacity="true" fillcenter="false"/>
			</rect>
	</append>


<!-- Buffs Info Panel for when on character menu and displaying buff details above backpack (buffInfoPanel)-->
	<set xpath="/windows/window[@name='buffInfoPanel']/@width">670</set>

	<set xpath="/windows/window[@name='buffInfoPanel']/rect//sprite[@name='backgroundMain'][@width='603']/@width">670</set>
	
	<set xpath="/windows/window[@name='buffInfoPanel']/rect//rect[@name='description']/@width">515</set>
	<set xpath="/windows/window[@name='buffInfoPanel']/rect//rect[@name='description']/sprite[@name='backgroundMain']/@width">520</set>
	<set xpath="/windows/window[@name='buffInfoPanel']/rect//rect[@name='description']//label[@name='descriptionText']/@width">507</set>


<!-- Rental vending machine Info Panel (serviceInfoPanel)-->
	<set xpath="/windows/window[@name='serviceInfoPanel']/@width">670</set>

	<set xpath="/windows/window[@name='serviceInfoPanel']/panel[@name='header']/label[@pos='350,-8']/@pos">416,-8</set>
	<set xpath="/windows/window[@name='serviceInfoPanel']/panel[@name='header']/sprite[@name='costIcon']/@pos">644,-8</set>

	<set xpath="/windows/window[@name='serviceInfoPanel']//sprite[@name='backgroundMain'][@width='603']/@width">670</set>
	
	<set xpath="/windows/window[@name='serviceInfoPanel']//rect[@name='description']/@width">514</set>
	<set xpath="/windows/window[@name='serviceInfoPanel']//rect[@name='description']/sprite[@name='backgroundMain']/@width">520</set>
	<set xpath="/windows/window[@name='serviceInfoPanel']//rect[@name='description']/label[@name='statText']/@width">321</set>
	<set xpath="/windows/window[@name='serviceInfoPanel']//rect[@name='description']/label[@name='descriptionText']/@width">507</set>
</configs>
