<configs>

<append xpath="/windows">

	<window name="RevsWW_LeftHUD" anchor="LeftBottom" pos="9,156" >
		<rect name="leftHUDwindow" rows="2" cols="1" width="168" side="right">
			<!-- Stealth Bar -->
			<sui_hud_stealthBar width="171" height="46" pos="0,50" bar_content_color="{stealthcolor}" sprite="{staticon|once}" icon_color="[white]" icon_size="35,35" icon_pos="26,-24" text="{statcurrent}" text_pos="44,-23" text_size="32" text_color="[white]" text_width="125" text_height="35" />

			<!-- Stamina Bar -->
			<sui_hud_vanilla_statBar width="171" height="46" pos="0,0" stat_type="Stamina" bar_content_color="0,54,255,128" sprite="ui_game_symbol_agility" icon_color="[white]" icon_size="35,35" icon_pos="26,-24" text="{statcurrentwithmax}" text_pos="44,-23" text_size="32" text_color="[white]" text_width="125" text_height="35" />

			<!-- Health Bar -->
			<sui_hud_vanilla_statBar width="171" height="46" pos="0,-50" stat_type="Health" bar_content_color="255,0,0,128" sprite="{staticon|once}" icon_color="[white]" icon_size="35,35" icon_pos="26,-24" text="{statcurrentwithmax}" text_pos="44,-23" text_size="32" text_color="[white]" text_width="125" text_height="35" />

			<!-- Food Bar -->
			<sui_hud_overfillfix_statBar width="84" height="46" pos="0,-100" stat_type="Food" bar_content_color="0,255,54,128" sprite="{staticon|once}" icon_color="[white]" icon_size="25,25" icon_pos="17,-24" text_pos="25,-12" text_size="24" text_color="[white]" text_width="60" text_height="27" />

			<!-- Water Bar -->
			<sui_hud_overfillfix_statBar width="85" height="46" pos="86,-100" stat_type="Water" bar_content_color="0,54,255,160" sprite="{staticon|once}" icon_color="[white]" icon_size="25,25" icon_pos="16,-23" text_pos="25,-12" text_size="24" text_color="[white]" text_width="60" text_height="27" />
		</rect>

		<!-- The vanilla buffs using the BuffPopoutList controller must exist somewhere in the HUD. -->
		<!-- If the BuffPopout does not exist the stamina bar will spam console with red errors expecting it. -->
		<!-- To be able to use detailed buffs we will just force the BuffPopout to not be visible so it's never rendered -->
		<rect name="Hidden" controller="DeathBar" visible="{never}" >

			<sui_hud_vanilla_BuffPopout width="168" height="46" pos="81,27" icon_size="40,40" icon_pos="-54,0" text_pos="-37,0" text_size="28" text_color="[white]" text_width="118" text_height="40" />

		</rect>

		<!--Detailed Buffs when Stealth is Not Visible -->
		<rect name="detailedBuffsSNV" pos="0,47" controller="HUDStatBar" stat_type="Stealth" visible="{# !statvisible}">
			<sui_hud_detailedBuffList width="314" height="46" pos="0,0" icon_size="32,32" icon_pos="9,-5" text_pos="49,-8" text_width="260" text_height="30" text_size="28" text_color="[white]" />
		</rect>

		<!--Detailed Buffs when Stealth is Visible -->
		<rect name="detailedBuffsSV" pos="0,97" controller="HUDStatBar" stat_type="Stealth" visible="{statvisible}">
			<sui_hud_detailedBuffList width="314" height="46" pos="0,0" icon_size="32,32" icon_pos="9,-5" text_pos="49,-8" text_width="260" text_height="30" text_size="28" text_color="[white]" />
		</rect>

	</window>

</append>
</configs>