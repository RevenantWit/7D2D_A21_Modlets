<configs>

<append xpath="/windows">

	<window name="RevsWW_ToolBelt" anchor="CenterBottom" pos="-376,96" cursor_area="true">
		<rect name="windowToolbelt" width="753" height="78" depth="5" backgroundcolor="[black]" controller="ToolbeltWindow" xp_fill_speed="2.5" >
			<sprite depth="8" name="backgroundMain" sprite="menu_empty3px" color="[black]" type="sliced" fillcenter="false" on_press="true" />
			
			<!--Vanilla Toolbelt-->
			<sui_vanillaToolbelt />

			<!--Stealth Bar-->
			<sui_toolbelt_doubleNoText_stealthBar pos="376,14" width="380" height="23" globalopacitymod="0.96" sprite="{staticon|once}" icon_color="[white]" icon_size="16,16" icon_pos="0,-8" />

			<!--XP Bar-->
			<sui_toolbelt_xpBar height="18" width="151" pos="601,-77" border_color="[black]" background_color="[mediumGrey]" barContent_color="{xpcolor}" filldirection="horizontal" sprite="ui_game_symbol_trophy" icon_color="[white]" icon_size="13,13" icon_pos="15,-9" text="" text_pos="0,-3" text_width="151" text_height="14" text_color="[white]" text_justify="center" />

			<!--Toolbelt Numbers-->
			<sui_toolbelt_numbers10 pos="0,12" cell_height="75" cell_width="75" background_pos="30,2" background_sprite="menu_tile_01" background_height="16" background_width="14" background_rotation="0" background_color="[darkestGrey]" background_pivot="center" background_globalopacity="true" background_globalopacitymod="0.93" text_pos="0,0" text_width="75" text_height="14" text_color="[white]" text_justify="center"/>
		</rect>

		<!--Stamina Bar-->
		<sui_toolbelt_statBar width="152" height="18" pos="1,-77" stat_type="Stamina" globalopacitymod="1.2" barBackground_fill="{statmodifiedmax}" barContent_color="0,54,255,128" sprite="ui_game_symbol_agility" icon_color="[white]" icon_size="14,14" icon_pos="15,-9" text="" text_pos="0,-3" text_color="[white]" text_width="152" text_height="14" text_justify="center" />

		<!--Health Bar-->
		<sui_toolbelt_statBar width="152" height="18" pos="151,-77" stat_type="Health" globalopacitymod="1.2" barBackground_fill="{statmodifiedmax}" barContent_color="255,0,0,128" sprite="{staticon|once}" icon_color="[white]" icon_size="13,13" icon_pos="15,-9" text="" text_pos="0,-3" text_color="[white]" text_width="152" text_height="14" text_justify="center" />

		<!--Food Bar-->
		<sui_toolbelt_simple_statBar width="152" height="18" pos="301,-77" stat_type="Food" globalopacitymod="1.25" barContent_color="0,255,54,128" filldirection="horizontal" sprite="{staticon|once}" icon_color="[white]" icon_size="13,13" icon_pos="17,-9" text="" text_pos="0,-3" text_color="[white]" text_width="152" text_height="14" text_justify="center" />

		<!--Water Bar-->
		<sui_toolbelt_simple_statBar width="152" height="18" pos="451,-77" stat_type="Water" globalopacitymod="1.25" barContent_color="64,164,223,150" filldirection="horizontal" sprite="{staticon|once}" icon_color="[white]" icon_size="13,13" icon_pos="15,-9" text="" text_pos="0,-3" text_color="[white]" text_width="152" text_height="14" text_justify="center" />
	</window>
</append>

</configs>