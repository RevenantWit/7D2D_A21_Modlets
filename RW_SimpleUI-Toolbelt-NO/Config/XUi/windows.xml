<configs>

<append xpath="/windows">

	<window name="RevsWW_ToolBelt" anchor="CenterBottom" pos="-376,92" cursor_area="true">
		<rect name="windowToolbelt" width="753" height="78" depth="5" backgroundcolor="[black]" controller="ToolbeltWindow" xp_fill_speed="2.5" >
			<sprite depth="8" name="backgroundMain" sprite="menu_empty3px" color="[black]" type="sliced" fillcenter="false" on_press="true" />
			
			<rect name="Toolbelt" pos="3,-3" controller="Toolbelt">
				<grid depth="10" name="inventory" rows="1" cols="10" pos="0,0" cell_width="75" cell_height="75" repeat_content="true">
					<item_stack name="0"/>
				</grid>
				<button depth="3" name="btnClearInventory1" sprite="ui_game_symbol_trash" tooltip_key="lblClearInventory" pos="800, -32" style="icon32px, press, hover" pivot="center" sound="[paging_click]" visible="{creativewindowopen}" />
				<grid depth="10" name="inventory2" rows="1" cols="10" pos="0,82" cell_width="75" cell_height="75" repeat_content="true" visible="{secondrow}">
					<item_stack name="0"/>
				</grid>
				<button depth="3" name="btnClearInventory2" sprite="ui_game_symbol_trash" tooltip_key="lblClearInventory" pos="800, 50" style="icon32px, press, hover" pivot="center" sound="[paging_click]" visible="{# creativewindowopen and secondrow}" />
			</rect>

			<rect name="xpBar" pos="0,-77">
				<sprite depth="1" height="12" color="[mediumGrey]" sprite="menu_empty2px" globalopacity="false" type="sliced" />
				<sprite depth="9" height="12" color="[black]" sprite="menu_empty2px" globalopacity="false" type="sliced" fillcenter="false" />
				<sprite depth="4" height="12" width="750" color="{xpcolor}" globalopacity="false" type="filled" fill="{xp}" />
			</rect>

			<rect name="ToolbeltNumbers" pos="33,19" controller="ToolbeltWindow">
				<grid depth="11" rows="1" cols="10" cell_width="75" cell_height="75" repeat_content="false">
					<label depth="12" width="12" height="22" text="1" font_size="22" effect="outline" color="[white]" justify="center" />
					<label depth="12" width="12" height="22" text="2" font_size="22" effect="outline" color="[white]" justify="center" />
					<label depth="12" width="12" height="22" text="3" font_size="22" effect="outline" color="[white]" justify="center" />
					<label depth="12" width="12" height="22" text="4" font_size="22" effect="outline" color="[white]" justify="center" />
					<label depth="12" width="12" height="22" text="5" font_size="22" effect="outline" color="[white]" justify="center" />
					<label depth="12" width="12" height="22" text="6" font_size="22" effect="outline" color="[white]" justify="center" />
					<label depth="12" width="12" height="22" text="7" font_size="22" effect="outline" color="[white]" justify="center" />
					<label depth="12" width="12" height="22" text="8" font_size="22" effect="outline" color="[white]" justify="center" />
					<label depth="12" width="12" height="22" text="9" font_size="22" effect="outline" color="[white]" justify="center" />
					<label depth="12" width="12" height="22" text="0" font_size="22" effect="outline" color="[white]" justify="center" />
				</grid>
			</rect>
		</rect>
	</window>

</append>
</configs>