<configs>

<append xpath="/windows">

	<window name="RevsWW_MultiHUD" anchor="LeftBottom" pos="9,156" side="right" controller="TabSelector" cursor_area="true">
		<rect name="tabsHeader"><!--Do not remove or change this rect name-->
			<grid name="tabButtons" pos="0,-133" depth="2" rows="1" cols="3" cell_width="57" cell_height="20" repeat_content="true" arrangement="horizontal">
				<rect>
					<simplebutton name="tabButton" depth="2" width="57" height="20" font_size="15" bordercolor="0,0,0,180" defaultcolor="[darkestGrey]" selectedsprite="menu_empty" selectedcolor="[mediumGrey]" foregroundlayer="false" />
				</rect>
			</grid>
		</rect>

		<rect name="tabsContents" ><!--Do not remove or change this rect name-->

			<rect name="Tab1" tab_key="xuiRWLeftHUDTab1">
				<rect name="leftHUDwindow" pos="0,15" rows="2" cols="1" width="168" side="right">
					<!-- Stealth Bar -->
					<sui_hud_stealthBar width="171" height="46" pos="0,50" bar_content_color="{stealthcolor}" sprite="{staticon|once}" icon_color="[white]" icon_size="35,35" icon_pos="26,-24" text="{statcurrent}" text_pos="44,-23" text_size="32" text_color="[white]" text_width="125" text_height="35" />

					<!-- Stamina Bar -->
					<sui_hud_vanilla_statBar width="171" height="46" pos="0,0" stat_type="Stamina" bar_content_color="0,54,255,128" sprite="ui_game_symbol_agility" icon_color="[white]" icon_size="35,35" icon_pos="26,-24" text="{statcurrentwithmax}" text_pos="44,-23" text_size="32" text_color="[white]" text_width="125" text_height="35" />

					<!-- Health Bar -->
					<sui_hud_vanilla_statBar width="171" height="46" pos="0,-50" stat_type="Health" bar_content_color="255,0,0,128" sprite="{staticon|once}" icon_color="[white]" icon_size="35,35" icon_pos="26,-24" text="{statcurrentwithmax}" text_pos="44,-23" text_size="32" text_color="[white]" text_width="125" text_height="35" />

					<!-- Food Bar -->
					<sui_hud_overfillfix_statBar width="84" height="46" pos="0,-100" stat_type="Food" bar_content_color="0,255,54,128" sprite="{staticon|once}" icon_color="[white]" icon_size="25,25" icon_pos="17,-24" text_pos="25,-12" text_size="24" text_color="[white]" text_width="60" text_height="27" />

					<!-- Water Bar -->
					<sui_hud_overfillfix_statBar width="85" height="46" pos="86,-100" stat_type="Water" bar_content_color="0,54,255,160" sprite="{staticon|once}" icon_color="[white]" icon_size="25,25" icon_pos="16,-23" text_pos="25,-12" text_size="24" text_color="[white]" text_width="60" text_height="27" />
				</rect>

				<!--Detailed Buffs when Stealth is Not Visible -->
				<rect name="detailedBuffsSNV" pos="-1,62" controller="HUDStatBar" stat_type="Stealth" visible="{# !statvisible}">
					<sui_hud_detailedBuffList width="314" height="46" pos="0,0" icon_size="32,32" icon_pos="9,-5" text_pos="49,-8" text_width="260" text_height="30" text_size="28" text_color="[white]" />
				</rect>

				<!--Detailed Buffs when Stealth is Visible -->
				<rect name="detailedBuffsSV" pos="-1,112" controller="HUDStatBar" stat_type="Stealth" visible="{statvisible}">
					<sui_hud_detailedBuffList width="314" height="46" pos="0,0" icon_size="32,32" icon_pos="9,-5" text_pos="49,-8" text_width="260" text_height="30" text_size="28" text_color="[white]" />
				</rect>
			</rect>

			<rect name="Tab2" tab_key="xuiRWLeftHUDTab2">
				<rect name="leftHUDwindow" pos="0,15" rows="2" cols="1" width="168" side="right">
					<!-- Stealth Bar -->
					<sui_hud_stealthBar width="171" height="46" pos="0,50" bar_content_color="{stealthcolor}" sprite="{staticon|once}" icon_color="[white]" icon_size="35,35" icon_pos="26,-24" text="{statcurrent}" text_pos="44,-23" text_size="32" text_color="[white]" text_width="125" text_height="35" />

					<!-- Stamina Bar -->
					<sui_hud_vanilla_statBar width="171" height="46" pos="0,0" stat_type="Stamina" bar_content_color="0,54,255,128" sprite="ui_game_symbol_agility" icon_color="[white]" icon_size="35,35" icon_pos="26,-24" text="{statcurrentwithmax}" text_pos="44,-23" text_size="32" text_color="[white]" text_width="125" text_height="35" />

					<!-- Health Bar -->
					<sui_hud_vanilla_statBar width="171" height="46" pos="0,-50" stat_type="Health" bar_content_color="255,0,0,128" sprite="{staticon|once}" icon_color="[white]" icon_size="35,35" icon_pos="26,-24" text="{statcurrentwithmax}" text_pos="44,-23" text_size="32" text_color="[white]" text_width="125" text_height="35" />

					<!-- Food Bar -->
					<sui_hud_overfillfix_statBar width="84" height="46" pos="0,-100" stat_type="Food" bar_content_color="0,255,54,128" sprite="{staticon|once}" icon_color="[white]" icon_size="25,25" icon_pos="17,-24" text_pos="25,-12" text_size="24" text_color="[white]" text_width="60" text_height="27" />

					<!-- Water Bar -->
					<sui_hud_overfillfix_statBar width="85" height="46" pos="86,-100" stat_type="Water" bar_content_color="0,54,255,160" sprite="{staticon|once}" icon_color="[white]" icon_size="25,25" icon_pos="16,-23" text_pos="25,-12" text_size="24" text_color="[white]" text_width="60" text_height="27" />
				</rect>

				<!--Buffs when Stealth is Not Visible -->
				<rect name="BuffsSNV" pos="0,50" controller="HUDStatBar" stat_type="Stealth" visible="{# !statvisible}">
					<sui_hud_vanilla_BuffPopout width="168" height="46" pos="81,-8" icon_size="40,40" icon_pos="-54,0" text_pos="-37,0" text_size="28" text_color="[white]" text_width="118" text_height="40" />
				</rect>

				<!--Buffs when Stealth is Visible -->
				<rect name="BuffsSV" pos="0,100" controller="HUDStatBar" stat_type="Stealth" visible="{statvisible}">
					<sui_hud_vanilla_BuffPopout width="168" height="46" pos="81,-8" icon_size="40,40" icon_pos="-54,0" text_pos="-37,0" text_size="28" text_color="[white]" text_width="118" text_height="40" />
				</rect>
			</rect>

			<rect name="Tab3" tab_key="xuiRWLeftHUDTab3">
				<rect name="leftHUDwindow" pos="0,15" rows="2" cols="1" width="168" side="right">
					<!-- Stealth Bar -->
					<sui_hud_stealthBar width="171" height="46" pos="0,0" bar_content_color="{stealthcolor}" sprite="{staticon|once}" icon_color="[white]" icon_size="35,35" icon_pos="26,-24" text="{statcurrent}" text_pos="44,-23" text_size="32" text_color="[white]" text_width="125" text_height="35" />

					<!-- Stamina Bar -->
					<sui_hud_vanilla_statBar width="171" height="46" pos="0,-50" stat_type="Stamina" bar_content_color="0,54,255,128" sprite="ui_game_symbol_agility" icon_color="[white]" icon_size="35,35" icon_pos="26,-24" text="{statcurrentwithmax}" text_pos="44,-23" text_size="32" text_color="[white]" text_width="125" text_height="35" />

					<!-- Health Bar -->
					<sui_hud_vanilla_statBar width="171" height="46" pos="0,-100" stat_type="Health" bar_content_color="255,0,0,128" sprite="{staticon|once}" icon_color="[white]" icon_size="35,35" icon_pos="26,-24" text="{statcurrentwithmax}" text_pos="44,-23" text_size="32" text_color="[white]" text_width="125" text_height="35" />
				</rect>

				<!--Only the last buffs rect in this file using the BuffPopoutList controller will use the slide up effect when crouched-->
				<!--The BuffPopoutList must exist somewhere in the HUD as well or the stamina bar will spam console with red errors expecting it -->
				<sui_hud_vanilla_BuffPopout width="168" height="46" pos="81,-8" icon_size="40,40" icon_pos="-54,0" text_pos="-37,0" text_size="28" text_color="[white]" text_width="118" text_height="40" />
			</rect>
		</rect>

	</window>

</append>
</configs>