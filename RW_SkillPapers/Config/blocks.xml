<configs>

<append xpath="/blocks">

<block name="RWBindingBench">
	<property name="Class" value="Workstation"/>
	<property class="Workstation">
		<property name="Modules" value="output"/>
		<property name="CraftingAreaRecipes" value="RWBindingBench"/>
	</property>
	<property name="CustomIcon" value="cntDeskMetalFullWhite"/>
	<property name="CustomIconTint" value="003366"/>
	<property name="TintColor" value="003366"/>
	<property name="DisplayType" value="blockMulti"/>
	<property name="WorkstationIcon" value="ui_game_symbol_book"/>
	<property name="Stacknumber" value="1"/>
    <property name="Material" value="Mmetal"/>
    <property name="Shape" value="ModelEntity"/>
	<property name="Model" value="@:Entities/LootContainers/deskMetalFullPrefab.prefab"/>
	<property name="MultiBlockDim" value="2,1,1"/>
	<property name="ImposterDontBlock" value="true"/>
	<property name="WaterFlow" value="permitted"/>
	<property name="Place" value="TowardsPlacerInverted"/>
	<property name="OnlySimpleRotations" value="true"/>
	<property name="IsTerrainDecoration" value="true"/>
	<property name="StabilitySupport" value="false"/>
	<property name="Path" value="solid"/>
	<property name="EconomicValue" value="1000"/>
	<property name="MaxDamage" value="800"/>
	<property name="OpenSound" value="open_workbench"/>
	<property name="CloseSound" value="close_workbench"/>
	<property name="TakeDelay" value="15"/>
	<property class="RepairItems">
		<property name="resourceForgedIron" value="25"/>
		<property name="resourceMechanicalParts" value="10"/>
		<property name="resourceDuctTape" value="1"/>
	</property>
	<drop event="Harvest" name="resourceScrapIron" count="100" tag="allHarvest"/>
	<drop event="Harvest" name="resourceWood" count="5" tag="allHarvest"/>
	<drop event="Harvest" name="terrStone" count="0" tool_category="Disassemble"/>
	<drop event="Harvest" name="resourceForgedIron" count="10" tag="salvageHarvest"/>
	<drop event="Harvest" name="resourceMechanicalParts" count="3" tag="salvageHarvest"/>
	<drop event="Harvest" name="resourceWood" count="5" tag="salvageHarvest"/>
	<drop event="Destroy" count="0"/>
	<drop event="Fall" name="scrapMetalPile" count="1" prob="0.75" stick_chance="1"/>
	<property name="Group" value="Building,TCScience,advBuilding"/>
	<property name="FilterTags" value="MC_playerBlocks,SC_decor"/>
</block>

</append>

</configs>